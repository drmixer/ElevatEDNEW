    "title": "Snack Stand Pricing Plan",
    "duration_days": 4,
    "driving_question": "How can we price and bundle snacks fairly while making a profit?",
    "summary": "Students design a pop-up snack stand menu, using ratio tables and unit rates to set prices, bundles, and discounts. They justify choices with proportional reasoning and present a simple break-even analysis.",
    "student_directions": [
      "Gather data on 2–3 snack items and typical serving sizes.",
      "Create unit rates and at least one bundle/discount that stays proportional.",
      "Design a one-page menu with visuals and a short justification paragraph."
    ],
    "checkpoints": [
      {
        "day": 1,
        "title": "Market research & ratios",
        "tasks": ["Record sample prices/servings", "Compute unit rates for each item"],
        "evidence": ["Completed table with unit rates", "One observation about fairness"]
      },
      {
        "day": 2,
        "title": "Bundles & discounts",
        "tasks": ["Propose at least one bundle or BOGO plan", "Show table/graph to prove proportionality"],
        "evidence": ["Bundle table and graph", "One-sentence justification"]
      },
      {
        "day": 3,
        "title": "Menu draft & feedback",
        "tasks": ["Lay out menu draft", "Peer feedback on clarity/pricing"],
        "evidence": ["Peer feedback notes", "Draft menu"]
      },
      {
        "day": 4,
        "title": "Pitch & reflection",
        "tasks": ["2–3 minute pitch", "Reflect on profit/fairness tradeoffs"],
        "evidence": ["Pitch notes", "Exit reflection slip"]
      }
    ],
    "rubric": [
      {
        "criterion": "Proportional reasoning",
        "levels": {
          "4": "Tables/graphs clearly show constant of proportionality; explains why choices stay proportional.",
          "3": "Mostly proportional pricing with minor slips; can identify unit rate.",
          "2": "Inconsistent proportionality; limited explanation of k.",
          "1": "Prices/ratios not supported with tables or graphs."
        }
      },
      {
        "criterion": "Clarity & visuals",
        "levels": {
          "4": "Menu is clean, labeled, and audience-friendly; visuals support math.",
          "3": "Readable with minor clutter; visuals mostly match prices.",
          "2": "Hard to read or missing labels; visuals loosely connected.",
          "1": "Unclear layout; audience cannot find prices."
        }
      },
      {
        "criterion": "Justification",
        "levels": {
          "4": "Argument links fairness, profit, and math evidence convincingly.",
          "3": "States fairness/profit with some evidence.",
          "2": "Claim present but evidence is thin or vague.",
          "1": "No clear justification."
        }
      }
    ],
    "differentiation": {
      "supports": [
        "Provide starter price table and partially filled graph axes.",
        "Allow calculator for unit rate calculations."
      ],
      "extensions": [
        "Add a tax/tip scenario and recalc totals.",
        "Model profit at two different demand levels."
      ]
    },
